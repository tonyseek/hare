{
  "name": "hare",
  "version": "1.0.0",
  "description": "Yet another front-end project playground",
  "files": [
    "npm-shrinkwrap.json",
    "public/**/*.+(js|jsx)",
    "server/**/*.+(js|jsx)",
    "views/*.+(html|mustache)",
    "dist/*.+(map|js|css|png|svg|jpg|gif)"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "prepack": "webpack",
    "postpack": "echo \"tar -zxvf ${npm_package_name}-${npm_package_version}.tgz && $(command -v babel) -s true -d package --only 'package/+(public|server)' package && find package -type f -name '*.jsx' -delete && tar -zcvf ${npm_package_name}-${npm_package_version}.tgz package && rm -rf package && rm -rf postpack.sh\" | tee postpack.sh",
    "start": "node server/index.js",
    "start:static": "webpack --watch",
    "start:server": "nodemon -w server -w views -e js,jsx,mustache -x babel-node server/index.jsx",
    "start:reload": "browser-sync start --no-ui --no-online --reload-delay=1500 --files=views"
  },
  "author": "Jiangge Zhang",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.0",
    "browser-sync": "^2.26.3",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.1.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "core-js": "^2.5.7",
    "express": "^4.16.4",
    "express-http-proxy": "^1.4.0",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.9.1",
    "mustache": "^3.0.0",
    "mustache-express": "^1.2.8",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0"
  }
}
