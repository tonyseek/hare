{
  "name": "hare",
  "version": "1.0.0",
  "description": "Yet another front-end project playground",
  "main": "server/index.js",
  "files": [
      "public/**/*.+(js|jsx)",
      "server/**/*.+(js|jsx)",
      "static/**/*.+(css|png|svg|jpg|gif)",
      "views/*.+(html|mustache)",
      "dist/*.+(js|css|map)"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode ${NODE_ENV:-development}",
    "prepack": "webpack --mode production",
    "start": "babel-node server/index.jsx",
    "start:static": "webpack --mode ${NODE_ENV:-development} --watch",
    "start:server": "nodemon -w server -w views -e js,jsx,mustache -x babel-node server/index.jsx",
    "start:reload": "browser-sync start --no-ui --no-online --reload-delay=1500 --files=views"
  },
  "author": "Jiangge Zhang",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.23.6",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.6",
    "nodemon": "^1.17.1",
    "postcss-loader": "^2.1.1",
    "postcss-preset-env": "^3.2.2",
    "style-loader": "^0.20.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "express": "^4.16.2",
    "express-http-proxy": "^1.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mustache": "^2.3.0",
    "mustache-express": "^1.2.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  }
}
